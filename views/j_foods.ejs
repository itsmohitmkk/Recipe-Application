<% include partials/header %>

<div class="container">
    <header class="jumbotron" id="mainHeader">
        <div class="container" >
            <h1>Welcome!</h1>
            <p>View the best Recipes</p>
            <p>
             <a  class="btn btn-primary btn-lg" href="views/j_foods/new">Add a new recipe</a>   
            </p>
        </div>
    </header>
    
        <div class="row" style="display:flex; flex-wrap: wrap">
            <% j_foods.forEach(function(j_food){%>
                <div class="col-lg-3 col-md-3 col-sm-6">
                    <div class="thumbnail">
                         <img src="<%= j_food.image %>">
                         <div class="caption">
                            <h4><%= j_food.name %></h4>
                         </div>
                    </div>
                </div>
            <% }) %>
        </div>
</div>

<% include partials/footer %>



